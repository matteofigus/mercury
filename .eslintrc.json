{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["warn", "unix"],
    "no-console": "warn",
    "quotes": ["warn", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }],
    "semi": ["warn", "always"],
    "no-var": "error",
    "strict": ["error", "safe"]
  }
}